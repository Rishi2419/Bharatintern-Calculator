<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/datatv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text=""

        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@id/resulttv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/resulttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:text="120"
        android:visibility="gone"
        android:textAlignment="viewEnd"

        android:textColor="#92FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/verical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/verical"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/bg2"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                android:id="@+id/clear"

                style="@style/normalbutton"
                android:onClick="clear"
                android:text="C"
                android:textColor="@color/green">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back"
                style="@style/normalbutton"
                android:gravity="center"
                android:onClick="back"


                app:icon="@drawable/baseline_backspace_24"
                app:iconGravity="start"
                app:iconSize="27dp"
                app:iconTint="@color/green">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/percent"

                style="@style/normalbutton"
                android:onClick="operator"
                android:text="%"
                android:textColor="@color/green">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/divide"

                style="@style/normalbutton"
                android:onClick="operator"
                android:text="/"
                android:textColor="@color/green">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                android:id="@+id/seven"

                style="@style/normalbutton"
                android:layout_width="69dp"
                android:onClick="digit"
                android:text="7">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/eight"

                style="@style/normalbutton"
                android:onClick="digit"
                android:text="8">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/nine"

                style="@style/normalbutton"
                android:onClick="digit"
                android:text="9">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/multi"

                style="@style/normalbutton"
                android:onClick="operator"
                android:text="*"
                android:textColor="@color/green">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                android:id="@+id/four"

                style="@style/normalbutton"
                android:onClick="digit"
                android:text="4">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/five"

                style="@style/normalbutton"
                android:onClick="digit"
                android:text="5">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/six"


                style="@style/normalbutton"
                android:onClick="digit"
                android:text="6">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/add"

                style="@style/normalbutton"
                android:onClick="operator"
                android:text="+"
                android:textColor="@color/green">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                android:id="@+id/one"

                style="@style/normalbutton"
                android:onClick="digit"
                android:text="1">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/two"

                style="@style/normalbutton"
                android:onClick="digit"
                android:text="2">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/three"

                style="@style/normalbutton"
                android:onClick="digit"
                android:text="3">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/sub"

                style="@style/normalbutton"
                android:onClick="operator"
                android:text="-"
                android:textColor="@color/green">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                android:id="@+id/allclear"

                style="@style/normalbutton"
                android:onClick="allclear"
                android:text="AC"
                android:textColor="@color/green"
                android:textSize="20sp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/zero"

                style="@style/normalbutton"
                android:onClick="digit"
                android:text="0">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/dot"

                style="@style/normalbutton"
                android:onClick="digit"
                android:text=".">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/equal"

                style="@style/normalbutton"
                android:backgroundTint="#489A55"
                android:onClick="equal"
                android:text="="
                android:textColor="@color/white">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>